<Window x:Class="CommonCommands.SPF"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SeverMineralsCommon"
             mc:Ignorable="d" 
             Height="710" Width="250" ResizeMode="NoResize" Title="Общие параметры" Icon="Resources/SeverMineralsLogo.png">

    <Grid Margin="0,0,0,0">
        <ListBox Name="Groups" HorizontalAlignment="Left" Height="230" Margin="2,2,0,0" VerticalAlignment="Top" Width="240" SelectionChanged="Groups_SelectionChanged" />


        <Button Content="Тип" HorizontalAlignment="Left" Margin="31,646,0,0" VerticalAlignment="Top" Width="75" Click="Buttontype_Click"/>
        <Button Content="Экземпляр" HorizontalAlignment="Left" Margin="138,646,0,0" VerticalAlignment="Top" Width="75" Click="Buttoninst_Click"/>


        <ListBox Name="Parameters" HorizontalAlignment="Left" Height="275" Margin="2,237,0,0" VerticalAlignment="Top" Width="240" SelectionMode="Multiple"/>
        <ListBox Name="ParameterGroup" HorizontalAlignment="Left" Height="115" Margin="2,519,0,0" VerticalAlignment="Top" Width="240" SelectionMode="Single"/>

    </Grid>
</Window>
